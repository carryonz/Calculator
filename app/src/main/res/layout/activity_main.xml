<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/in_put"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:textSize="30sp"
            android:hint="请输入正确的格式！"
            android:background="#ffffff"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4ffffff"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/ones"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="55sp"
                    android:background="#ffffcc"
                    android:layout_margin="5dip"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/two"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="55sp"
                    android:background="#ffffcc"
                    android:layout_margin="5dip"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/three"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="55sp"
                    android:background="#ffffcc"
                    android:layout_margin="5dip"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/four"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="55sp"
                    android:background="#ffffcc"
                    android:layout_margin="5dip"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/five"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="55sp"
                    android:background="#ffffcc"
                    android:layout_margin="5dip"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/six"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="55sp"
                    android:background="#ffffcc"
                    android:layout_margin="5dip"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/seven"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="55sp"
                    android:background="#ffffcc"
                    android:layout_margin="5dip"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/eight"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="55sp"
                    android:background="#ffffcc"
                    android:layout_margin="5dip"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/nine"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="55sp"
                    android:background="#ffffcc"
                    android:layout_margin="5dip"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/left"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="("
                    android:textSize="25sp"
                    android:background="#ffffcc"
                    android:layout_margin="5dip"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/right"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text=")"
                    android:textSize="25sp"
                    android:background="#ffffcc"
                    android:layout_margin="5dip"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp">


                <Button
                    android:id="@+id/zero"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="55sp"
                    android:background="#ffffcc"
                    android:layout_margin="5dip"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/equal"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="="
                    android:textSize="55sp"
                    android:background="#c6efb35f"
                    android:layout_margin="5dip"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#f4ffffff"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/point"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:background="#ffffcc"
                android:text="."
                android:textSize="55sp" />
            <Button
                android:id="@+id/jia"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:background="#c6efb35f"
                android:text="+"
                android:textSize="55sp" />
            <Button
                android:id="@+id/jian"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="55sp"
                android:background="#c6efb35f"
                android:layout_margin="5dip"
                android:layout_height="0dp" />
            <Button
                android:id="@+id/cheng"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="×"
                android:textSize="55sp"
                android:background="#c6efb35f"
                android:layout_margin="5dip"
                android:layout_height="0dp" />
            <Button
                android:id="@+id/chu"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="÷"
                android:textSize="55sp"
                android:background="#c6efb35f"
                android:layout_margin="5dip"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>